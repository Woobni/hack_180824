<%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
  <%= devise_error_messages! %> <!-- 이거 수정해야함 -->
  <div id="editPage">

    <div>
      <img src="#" id="profileEditImg" />
    </div>
    <div id="changeImage_edit">
      사진 바꾸기
    </div>
  </div>

  <div class="profileEditElement">
    <div>
      아이디
    </div>
    <div>
      <div class="field all_element_editProfile">
        <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
      </div>
    </div>
    <div class="nameLabel">
      이름
    </div>
    <div>
      <div class="field all_element_editProfile">
      <%= f.text_field :identity, autofocus: false, autocomplete: "off" %>
      </div>
    </div>
    <div class="oneLineLable">
      한 줄
    </div>
    <div>
      <textarea id="profileEditTextArea"></textarea>
    </div>
    <div id="passwordLable">
      비밀번호
    </div>
    <div>
      <%= f.password_field :password, autocomplete: "off" %>
      <!-- 비번 유효성 -->
      <!-- <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %> -->
    </div>
    <div id="passwordConfirmLabel">
      비밀번호 확인
    </div>
    <div>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    <div id="alertLabel">
      알림
    </div>
    <div id="alertElement">
      <div class="eleAlert"  style="margin-top:25px">
        <div class="elementOfAlert">
          구독
        </div>
        <div class="switch">
          <label>
            Off
            <input type="checkbox">
            <span class="lever"></span>
            On
          </label>
        </div>
     </div>
       <div class="eleAlert"  style="margin-top:25px">
         <div class="elementOfAlert">
           댓글
         </div>
         <div class="switch">
           <label>
             Off
             <input type="checkbox">
             <span class="lever"></span>
             On
           </label>
         </div>
      </div>
      <div class="eleAlert"  style="margin-top:25px">
        <div class="elementOfAlert">
          담기
        </div>
        <div class="switch">
          <label>
            Off
            <input type="checkbox">
            <span class="lever"></span>
            On
          </label>
        </div>
     </div>
     <div><hr id="EditProfile_hrTag"/></div>
    </div>
  </div>
  <div id="submitEditProfile">
    <button id="submitEditProfileButton">확인</button>
  </div>

<% end %>
