<br>
<div class = "center">
  <%= link_to image_tag(@user.thumbnail, class: "tl-size circle"), profile_timeline_path(@user.id) %>
  
  <h4>
    <%= @user.name %>
  </h4>
    
  <p><%= @user.followings.size %>명을 구독하고, <%= @user.followers.size %>명이 구독 중</p><br>
  <p><%= @user.information %></p>
  
  <div class = "center" id="follow">
    <% if user_signed_in? && current_user != @user %>
      <% if current_user.followings.include?(@user) %>
          <%= form_tag follow_path(followed_id: @user.id), method: :delete, class: "follow" do %>
           <%= button_tag "구독 취소", class: "btn indigo darken-4" %>
          <% end %>
      <% else %>
          <%= form_tag follows_path, class: "follow" do %>
              <input type="hidden" name="followed_id" value="<%= @user.id %>">
              <%= button_tag "구독", class: "btn purple indigo darken-4" %>
          <% end %>
      <% end %>
    <% end %>
  </div>

</div>

<br>
<hr>
<br><br>

<div class = "center">
  <% if @posts.present? %>
    <% @posts.each do |p| %>
      <a href="<%= post_path(p) %>">
        <div class="row">
            <div class="col s12 m7">
              <div class="card">
                <div class="card-image">
                  <img src="/onefive.png">
                  <span class="card-title indigo-text text-darken-4"><%= p.title %></span>
                </div>
                <div class="card-content">
                  <p class="indigo-text text-darken-4"><b><%= p.subtitle %></b><br><br>
                  <%= p.content %></p>
                </div>
                <div class="card-action">
                  <span class="black-text"><i class="material-icons">bookmark</i><%= p.likes.size %></span>
                  <span class="black-text"><i class="material-icons">sms</i><%= p.comments.size %></span>
                  <%= link_to "#{p.user.identity}", "#", class: "right indigo-text text-darken-4" %>
                </div>
              </div>
            </div>
        </div>
      </a>
    <% end %>
  <% end %>
</div>